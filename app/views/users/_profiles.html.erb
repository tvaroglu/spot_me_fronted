<% current_user = @user %>
<table class="table table-sm table-borderless table-responsive align-middle">
  <thead>
  </thead>
  <tbody>
    <tr>
      <td align="center">
        <img id="profile_pic" src="<%= current_user.google_image_url %>">
        <br>
        <br>
        <% if view_type == 'profile (self)' %>
          <h4 id="goals">Goal: <%= current_user.goal %></h4>
          <h4 id="availability"><u>Availability:</u>
            <br>
            <% if current_user.availability_morning %>
              <p>Morning</p>
            <% end %>
            <% if current_user.availability_afternoon %>
              <p>Afternoon</p>
            <% end %>
            <% if current_user.availability_evening %>
              <p>Evening</p>
            <% end %>
          </h4>
        <% elsif view_type == 'dashboard' %>
          <h2 id="friends">My Friends:</h2>
          <!-- placeholder for stubs in controller, remove guard clause after sprint -->
          <% if @user_friends %>
            <% @user_friends.each do |friend| %>
              <p id="friend"><%= friend.full_name %></p>
            <% end %>
          <!-- placeholder for stubs in controller, remove guard clause after sprint -->
          <% end %>
        <% end %>
      </td>
      <td>
        <h1 id="user_name"><%= current_user.full_name %></h1>
        <h4 id="zip_code">Zip Code: <%= current_user.zip_code %></h4>
        <br>
        <% if view_type == 'profile (self)' %>
          <h3 id="summary"><u>Summary:</u>
            <br>
            <%= current_user.summary %></h3>
          <br>
        <% elsif view_type == 'dashboard' %>
          <h2 id="events">Upcoming Workouts:</h2>
          <!-- placeholder for stubs in controller, remove guard clause after sprint -->
          <% if @user_events %>
            <% @user_events.each do |event| %>
              <p id="event"><%= event.activity %>: <%= event.date_time %></p>
            <% end %>
          <!-- placeholder for stubs in controller, remove guard clause after sprint -->
          <% end %>
          <h2 id="gyms">My Gyms:</h2>
          <!-- placeholder for stubs in controller, remove guard clause after sprint -->
          <% if @user_gyms %>
            <% @user_gyms.each do |gym| %>
              <p id="gym"><%= gym.name %></p>
            <% end %>
          <!-- placeholder for stubs in controller, remove guard clause after sprint -->
          <% end %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
